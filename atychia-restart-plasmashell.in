@KDE_INSTALL_FULL_BINDIR@/systemctl --user stop plasma-plasmashell
sleep 3
@KDE_INSTALL_FULL_BINDIR@/systemctl --user is-active --quiet plasma-plasmashell || kill -9 "$(@KDE_INSTALL_FULL_BINDIR@/systemctl --user show --property MainPID --value plasma-plasmashell)"
@KDE_INSTALL_FULL_BINDIR@/systemctl --user start plasma-plasmashell
